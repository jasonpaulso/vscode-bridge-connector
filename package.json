{
  "name": "vscode-bridge-connector",
  "displayName": "VSCode Bridge Connector üîåüåâ",
  "publisher": "1WAYTO",
  "version": "0.0.2",
  "author": {
    "name": "Eric Lee",
    "email": "hello@1wayto.com"
  },
  "description": "A secure HTTP bridge for external applications to communicate with VSCode",
  "repository": {
    "type": "git",
    "url": "https://github.com/1wayto/vscode-bridge-connector.git"
  },
  "bugs": {
    "url": "https://github.com/1wayto/vscode-bridge-connector/issues"
  },
  "homepage": "https://github.com/1wayto/vscode-bridge-connector#readme",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bridge",
    "api",
    "connector",
    "automation",
    "http",
    "remote",
    "command"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "üîß Bridge Connector Settings",
      "properties": {
        "bridgeConnector.port": {
          "type": "number",
          "default": 8282,
          "description": "Port for the local HTTP bridge (default: 8282) üõ°Ô∏è"
        },
        "bridgeConnector.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable the local API bridge on startup üöÄ"
        },
        "bridgeConnector.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the local API bridge (leave empty for no authentication) üîë"
        }
      }
    },
    "commands": [
      {
        "command": "bridgeConnector.showMenu",
        "title": "Show Bridge Connector Menu",
        "category": "Bridge Connector"
      },
      {
        "command": "bridgeConnector.toggle",
        "title": "Toggle Bridge Connector",
        "category": "Bridge Connector"
      },
      {
        "command": "bridgeConnector.openSettings",
        "title": "Open Bridge Connector Settings",
        "category": "Bridge Connector"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.4"
  }
}
